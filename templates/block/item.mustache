<div class="sharing_cart_item" data-type="{{type}}" data-itemid="{{id}}" data-status="{{status}}"
     {{^is_module}}data-collapsed="true"{{/is_module}}>
    <div class="item-body">
        <div class="info">
            {{> block_sharing_cart/block/item/icon }}
            <span class="name">{{name}}</span>
        </div>
        <span class="sharing_cart_item_actions">
            {{^status_awaiting}}
                {{#is_root}}
                    <i class="fa fa-trash" data-action="delete"
                       title="{{#str}}delete_item, block_sharing_cart{{/str}}"></i>
                {{/is_root}}
                {{#status_finished}}
                    <i class="fa fa-clone" data-action="copy_to_course"
                       title="{{#str}}copy_item, block_sharing_cart{{/str}}"></i>
                {{/status_finished}}
            {{/status_awaiting}}
            {{#has_run_now}}
                <a class="btn btn-secondary text-nowrap" data-action="run_now" data-task-id="{{task_id}}">
                    {{#str}}run_now, block_sharing_cart{{/str}}
                </a>
            {{/has_run_now}}
        </span>
    </div>
    <div class="sharing_cart_item_children">
        {{#children}}
            {{> block_sharing_cart/block/item }}
        {{/children}}
    </div>
</div>